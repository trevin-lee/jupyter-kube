{
  "compilerOptions": {
    "outDir": "../dist-electron",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "types": ["node", "electron"]
  },
  "include": [
    "main.ts",
    "preload.ts",
    "kubernetes-service.ts",
    "config.ts",
  ]
} 