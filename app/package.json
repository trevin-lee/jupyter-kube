{
  "name": "jupyter-kube",
  "version": "1.0.0",
  "description": "Kubernetes-based Jupyter environment manager",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite --port 5173",
    "dev:electron": "tsc --project electron/tsconfig.json && cross-env IS_DEV=true electron dist-electron/electron/main.js",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && npm run dev:electron",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:preview": "npm run build && electron .",
    "build:for-electron": "tsc && vite build",
    "app:build": "npm run build:for-electron && electron-builder",
    "build:mac": "npm run build:for-electron && electron-builder --mac",
    "build:win": "npm run build:for-electron && electron-builder --win",
    "build:linux": "npm run build:for-electron && electron-builder --linux",
    "build:all": "npm run build:for-electron && electron-builder --mac --win --linux",
    "dist": "npm run build:all",
    "clean": "rm -rf dist dist-electron release",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "overrides": {
    "yaml": "1.10.2"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-log": "^5.4.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^7.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.jupyter-kube",
    "productName": "Jupyter Kube",
    "copyright": "Copyright Â© 2024 Your Name",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!electron/**/*"
    ],
    "extraResources": [],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/jupyter-kube.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/jupyter-kube.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/jupyter-kube.png",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
